<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadPdf">


    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/select_pdf"
        android:hint="Select File from storage"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_pdf"
        android:id="@+id/uploadBtn"
        android:layout_centerHorizontal="true"
        android:text="Upload File"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uploadBtn"
        android:id="@+id/btnRead"
        android:layout_centerHorizontal="true"
        android:text="Retrieve PDF File"
        android:onClick="retrievePDF"
        android:layout_margin="10dp"
        />

</RelativeLayout>